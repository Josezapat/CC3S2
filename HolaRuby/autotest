# .autotest

# Rutas de los archivos de prueba
%w[test/**/*.rb].each do |file|
    add_mapping(file) { |f, _|
      Dir['test/**/*.rb']
    }
  end
  
  # Opciones de ejecución de las pruebas
  class Autotest
    # Ejecuta las pruebas al guardar un archivo
    def initialize
      super
      self.add_exception %r{^\.git/}  # Ignorar archivos en la carpeta .git
    end
  
    # Personaliza los comandos para ejecutar las pruebas (puede variar según el entorno)
    def get_test_cmd(files_to_test)
      "rspec #{files_to_test.keys.join(' ')}"
    end
  end
